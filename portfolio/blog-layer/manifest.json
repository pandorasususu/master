{
  "manifest_version": 3,
  "name": "BlogLayer",
  "version": "1.0",
  
  "action": {
    "default_icon": "default_icon.png",
    "default_popup": "popup.html"
  },
  "description": "This extension helps users to hightlight articles or take memos and save those data in a necessary place and load them whenvever needed.",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["./contentScripts/style.css"],
      "run_at": "document_start",
      "js": ["./contentScripts/script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

